<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/rounded_background">

    <!-- Modal Title -->
    <TextView
        android:id="@+id/modalTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buy Carbon Credits"
        android:textColor="@color/green"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Quantity Control -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <ImageButton
            android:id="@+id/decrementBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/black"
            android:src="@drawable/minus_ic"
            android:background="@drawable/rounded_button_background"
            android:scaleType="centerInside"
            android:contentDescription="Decrease" />

        <TextView
            android:id="@+id/quantityText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="20dp"/>

        <ImageButton
            android:id="@+id/incrementBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/black"
            android:src="@drawable/baseline_add_24"
            android:background="@drawable/rounded_button_background"
            android:scaleType="centerInside"
            android:contentDescription="Increase" />
    </LinearLayout>

    <!-- From / To Label -->
    <TextView
        android:id="@+id/dropdownLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From"
        android:textColor="#333333"
        android:textSize="14sp"
        android:layout_marginTop="16dp" />

    <!-- Partner Spinner -->
    <Spinner
        android:id="@+id/partnerSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_input_box"
        android:layout_marginTop="8dp"
        android:padding="8dp"/>

    <!-- Modal Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="20dp"
        android:weightSum="2">

        <Button
            android:id="@+id/cancelBtn"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="CANCEL"
            android:backgroundTint="#6B7280"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/checkoutBtn"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="CHECKOUT"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/green"
            android:textColor="@android:color/white" />
    </LinearLayout>
</LinearLayout>
